{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://localhost:5001"
      }
    }
  },
  "ConnectionStrings": {
    "MongoDb": "mongodb://localhost:27017"
  },
  "JwtSettings": {
    "Secret": "VerySecureSecretKey12345678901234567890",
    "Issuer": "DenemeApi",
    "Audience": "DenemeApiClient",
    "AccessTokenExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7
  },
  "CorsSettings": {
    "AllowAll": true,
    "AllowedOrigins": [
      "https://localhost:5001",
      "https://localhost:3000"
    ]
  },
  "LogSettings": {
    "DatabaseName": "DenemeApiLogs",
    "ExpireAfterDays": 30,
    "ExcludedPaths": [
      "/health"
    ]
  },
  "SwaggerSettings": {
    "RoutePrefix": "swagger",
    "DocumentTitle": "Log API Dok√ºmantasyonu",
    "Version": "v1",
    "ApiName": "Log API"
  }
}
